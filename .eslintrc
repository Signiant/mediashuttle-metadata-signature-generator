{
  "rules": {
    "indent": [
      2,
      4
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-console": 0,
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "brace-style": 2,
    "max-len": [2, 120, 4],
    "keyword-spacing": 2,
    "space-in-parens": 2,
    "space-before-function-paren": 1,
    "eqeqeq": [2, "smart"],
    "no-undefined": 2,
    "mocha/no-exclusive-tests": 2
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "assert": false,
    "expect": false,
    "should": false,
    "sinon": false
  },
  "extends": "eslint:recommended",
  "plugins": [
    "mocha"
  ]
}